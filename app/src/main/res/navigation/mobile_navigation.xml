<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_cargar">

    <fragment
        android:id="@+id/nav_cargar"
        android:name="com.example.tp03_android_cargar_listar_productos_salir.ui.cargar.CargarFragment"
        android:label="Cargar Producto"
        tools:layout="@layout/fragment_cargar" />

    <fragment
        android:id="@+id/nav_listar"
        android:name="com.example.tp03_android_cargar_listar_productos_salir.ui.listar.ListarFragment"
        android:label="Lista de Productos"
        tools:layout="@layout/fragment_listar" />

    <fragment
        android:id="@+id/nav_maps"
        android:name="com.example.tp03_android_cargar_listar_productos_salir.ui.maps.MapsFragment"
        android:label="Mi Ubicación"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/nav_busqueda"
        android:name="com.example.tp03_android_cargar_listar_productos_salir.ui.busqueda.BusquedaFragment"
        android:label="Búsqueda de Productos"
        tools:layout="@layout/fragment_busqueda">
        <action
            android:id="@+id/action_busqueda_to_detalle"
            app:destination="@id/nav_detalle" />
    </fragment>

    <fragment
        android:id="@+id/nav_detalle"
        android:name="com.example.tp03_android_cargar_listar_productos_salir.ui.detalle.DetalleFragment"
        android:label="Detalle del Producto"
        tools:layout="@layout/fragment_detalle" />

    <fragment
        android:id="@+id/nav_salir"
        android:name="com.example.tp03_android_cargar_listar_productos_salir.ui.salir.SalirFragment"
        android:label="Salir"
        tools:layout="@layout/fragment_salir" />
</navigation>